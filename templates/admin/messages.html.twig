{% extends 'base.html.twig' %}

{% block title %}Messages de Contact - Admin{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Messages de Contact</h1>
            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mt-2">← Retour au tableau de bord</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-danger">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Sujet</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if messages %}
                            {% for message in messages %}
                                <tr>
                                    <td>#{{ message.id }}</td>
                                    <td>{{ message.name }}</td>
                                    <td><a href="mailto:{{ message.email }}">{{ message.email }}</a></td>
                                    <td>{{ message.subject }}</td>
                                    <td>{{ message.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {% if message.status == 'new' %}
                                            <span class="badge bg-danger">Nouveau</span>
                                        {% elseif message.status == 'read' %}
                                            <span class="badge bg-warning">Lu</span>
                                        {% else %}
                                            <span class="badge bg-success">{{ message.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_message_detail', {id: message.id}) }}" class="btn btn-sm btn-primary">Détails</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">Aucun message trouvé</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
