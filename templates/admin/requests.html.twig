{% extends 'base.html.twig' %}

{% block title %}Demandes de Service - Admin{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Demandes de Service</h1>
            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mt-2">← Retour au tableau de bord</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-warning">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Pays</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if requests %}
                            {% for request in requests %}
                                <tr>
                                    <td>#{{ request.id }}</td>
                                    <td>{{ request.name }}</td>
                                    <td><a href="mailto:{{ request.email }}">{{ request.email }}</a></td>
                                    <td><span class="badge bg-info">{{ request.type }}</span></td>
                                    <td>{{ request.country ?? '-' }}</td>
                                    <td>{{ request.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {% if request.status == 'new' %}
                                            <span class="badge bg-danger">Nouveau</span>
                                        {% elseif request.status == 'in_progress' %}
                                            <span class="badge bg-warning">En cours</span>
                                        {% else %}
                                            <span class="badge bg-success">{{ request.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_request_detail', {id: request.id}) }}" class="btn btn-sm btn-primary">Détails</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">Aucune demande trouvée</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
