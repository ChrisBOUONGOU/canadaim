{% extends 'base.html.twig' %}

{% block title %}Détails Demande - Admin{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Détails de la Demande</h1>
            <a href="{{ path('admin_requests') }}" class="btn btn-secondary mt-2">← Retour aux demandes</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Demande #{{ request.id }} - {{ request.type|upper }}</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Nom</h6>
                            <p>{{ request.name }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Email</h6>
                            <p><a href="mailto:{{ request.email }}">{{ request.email }}</a></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Téléphone</h6>
                            <p>{{ request.phone ?? '-' }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Pays</h6>
                            <p>{{ request.country ?? '-' }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Type de Service</h6>
                            <p>
                                {% if request.type == 'immigration' %}
                                    <span class="badge bg-primary">Immigration</span>
                                {% elseif request.type == 'travail' %}
                                    <span class="badge bg-info">Travail</span>
                                {% elseif request.type == 'etude' %}
                                    <span class="badge bg-success">Études</span>
                                {% elseif request.type == 'sponsor' %}
                                    <span class="badge bg-danger">Parrainage</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Statut</h6>
                            <p>
                                {% if request.status == 'new' %}
                                    <span class="badge bg-danger">Nouveau</span>
                                {% elseif request.status == 'in_progress' %}
                                    <span class="badge bg-warning">En cours</span>
                                {% else %}
                                    <span class="badge bg-success">{{ request.status }}</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <hr>

                    <h6>Détails de la Demande</h6>
                    <div class="p-3 bg-light rounded">
                        {{ request.details ?? '<em>Aucun détail fourni</em>'|raw }}
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Date de réception</h6>
                            <p>{{ request.createdAt|date('d/m/Y H:i:s') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
